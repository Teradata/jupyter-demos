{
    "types": [
      "node",
      "jest"
    ],
    "compilerOptions": {
      "lib": [
        "es2019"
      ],
      "rootDir": ".",
      "outDir": "build",
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts",
      "test-helpers/**/*.ts",
      "./package.json",
      "./package-lock.json",
      "./templates/**/*.mustache"
    ],
    "exclude": ["node_modules"]
  }